depend() {
	need net nqptp avahi-daemon
	use logger 
}

start() {
	ebegin "Starting ${SVCNAME}"
	start-stop-daemon --start --background \
    --chdir /home/thughey/.pierre --user thughey:thughey \
    --stdout /var/log/${SVCNAME}.log --stderr /var/log/${SVCNAME}.log \
    --pidfile /run/pierre/${SVCNAME}.pid --make-pidfile \
		--exec /home/thughey/devel/pierre/build/${SVCNAME} -- 
	eend $?
}

stop() {
	ebegin "Stopping ${SVCNAME}"
	start-stop-daemon --stop --pidfile /run/pierre/${SVCNAME}.pid
	eend $?
}
