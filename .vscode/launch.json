{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/pierre",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        },
        {
          "description": "Pass SIGINT",
          "text": "handle SIGINT pass noprint",
          "ignoreFailures": false
        }
      ]
    },
    {
      "name": "Bistro Daemon",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/pierre",
      "args": [
        "--force-restart",
        "--daemon",
        "--cfg-file=/etc/pierre/live.toml"
      ],
      "stopAtEntry": false,
      "cwd": "/tmp",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        },
        {
          "description": "Set Follow Fork",
          "text": "-gdb-set follow-fork-mode child",
          "ignoreFailures": true
        },
        {
          "description": "Pass SIGINT",
          "text": "handle SIGINT pass noprint",
          "ignoreFailures": false
        }
      ]
    },
    {
      "name": "Debug help",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/pierre",
      "args": [
        "--help"
      ],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}